    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.4.0",
    "babel-jest": "^29.3.1",
    "cypress": "^12.3.0",
    "eslint": "^9.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-xo": "^0.46.0",
