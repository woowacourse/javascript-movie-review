{
  "rules": {
    "max-depth": ["warn", 1],
    "max-params": ["warn", 3],
    "linebreak-style": "off",
    "import/no-unresolved": "off",
    "import/extensions": "off"
  },
  "overrides": [
    {
      "files": ["./src/**"],
      "rules": { "max-lines-per-function": ["warn", { "max": 10 }] }
    }
  ],
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "cypress/globals": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "import", "cypress"],
  "extends": ["prettier", "airbnb-base", "plugin:cypress/recommended"]
}
